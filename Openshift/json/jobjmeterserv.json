{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "jobjmeterserv",
    "namespace": "jmeter"
  },
  "spec": {
    "parallelism": 2,
    "completions": 2,
    "template": {
      "metadata": {
        "name": "jmeterserv"
      },
      "spec": {
        "containers": [
          {
            "name": "jmeterserv",
            "image": "docker-registry.default.svc:5000/jmeter/jmeterserv",
            "volumeMounts": [
              {
                "mountPath": "/SharedVolume",
                "name": "pvjmeter"
              }
            ]
          }
        ],
        "restartPolicy": "Never",
        "volumes": [
          {
            "name": "pvjmeter",
            "persistentVolumeClaim": {
              "claimName": "jmeter"
            }
          }
        ]
      }
    }
  }
}