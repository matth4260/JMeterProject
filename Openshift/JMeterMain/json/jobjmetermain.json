{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "jobjmetermain"
  },
  "spec": {
    "parallelism": 1,
    "completions": 1,
    "template": {
      "metadata": {
        "name": "jmetermain"
      },
      "spec": {
        "containers": [
          {
            "name": "jmetermain",
            "image": "docker-registry.default.svc:5000/jmeter/jmetermain",
            "env": [
              {
                "name": "USER",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "oc-user",
                    "key": "password"
                  }
                }
              },
              {
                "name": "PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "oc-password",
                    "key": "password"
                  }
                }
              },
              {
                "name": "NINJECTOR",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "jmeter-config",
                    "key": "number-of-injector"
                  }
                }
              }
            ]
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}